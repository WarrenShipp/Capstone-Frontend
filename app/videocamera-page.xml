<Page
  xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo"
  xmlns:VideoPlayer="nativescript-videoplayer"
  xmlns:recorder="nativescript-videorecorder/advanced" loaded="loaded">
  <ActionBar class="action-bar" title="Shot Recorder"/>
  <StackLayout margin="20">
    <StackLayout verticalAlignment="center">
      
      <recorder:AdvancedVideoView height="85%" quality="highest" cameraPosition="FRONT" id="camera"/>
      <Button text="{{ showDetails ? 'Record' : 'Finish' }}" tap="recordVideo"/>
    </StackLayout>
  </StackLayout>
</Page>