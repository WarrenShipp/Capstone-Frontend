<Page loaded="record_shot" xmlns:df="nativescript-pro-ui/dataform" xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:dd="nativescript-drop-down" xmlns:VideoPlayer="videoplayer">
    <ActionBar class="action-bar">
        <NavigationButton ios:visibility="collapsed" icon="res://ham" tap="onDrawerButtonTap"></NavigationButton>
        <ActionItem icon="res://navigation/menu" android:visibility="collapsed"
            tap="onDrawerButtonTap" ios.position="left">
        </ActionItem>
        <Label class="action-bar-title" text="Record"></Label>
    </ActionBar>
    <StackLayout>
    <GridLayout columns="*,2*" horizontalAlignment="left" verticalAlignment="top">
		<Label col="0" text="Type   "></Label>
		<dd:DropDown col="1" items="{{ searchTypes }}" selectedIndex="{{ typeIndex }}" opened="dropDownOpened" selectedIndexChanged="dropDownSelectedIndexChanged" />	  
	</GridLayout>
    <GridLayout columns="*,2*" horizontalAlignment="left" verticalAlignment="top">
		<Label col="0" text="Type   "></Label>
		<dd:DropDown col="1" items="{{ clubTypes }}" selectedIndex="{{ typeIndex }}" opened="dropDownOpened" selectedIndexChanged="dropDownSelectedIndexChanged" />	  
	</GridLayout>
    <Label text="Video Here   "></Label>
    <Button class="btn btn-primary" text="Record New Shot" tap="startRecord" />
    <Label text="Video Length:   "></Label>
    <Label text="Date:    "></Label>
    <Label text="Shot Type:   "></Label>
    <Label text="Rating:   "></Label>

    <GridLayout columns="*,*,*" rows="*,*,*">
        <Button col="0" class="smallbtn" text="Discard" tap="startRecord" />
        <Button col="1" class="smallbtn" text="Save" tap="startRecord" />
        <Button col="2" class="smallbtn" text="Upload" tap="startRecord" />
    </GridLayout>
    </StackLayout>
</Page>