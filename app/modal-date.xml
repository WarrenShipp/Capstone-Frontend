<Page xmlns="http://www.nativescript.org/tns.xsd"
      shownModally="onShownModally"
      xmlns:calendar="nativescript-ui-calendar">
    <ScrollView>
    <StackLayout>
        <Label class="text-header modal-header" text="Choose Birth Date" />
        
        <!-- calendar -->
    <DatePicker id="birthDate" date="{{ birthDate }}" maxDate="{{ maxDate }}"/>

        <!-- buttons -->
        <GridLayout columns="*,*">
            <Button col="0" text="Save" tap="onDateSelected" />
            <Button col="1" class="button button-margin" text="Deselect" tap="deselect" />
        </GridLayout>

    </StackLayout>
    </ScrollView>

</Page>
