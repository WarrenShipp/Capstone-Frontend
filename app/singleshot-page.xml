<Page loaded="record_shot" xmlns:df="nativescript-pro-ui/dataform" xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:dd="nativescript-drop-down" 
xmlns:VideoPlayer="nativescript-videoplayer" navigatingFrom="onNavigatingFrom">
    <ActionBar class="action-bar">
        <NavigationButton ios:visibility="collapsed" icon="res://ham" tap="onDrawerButtonTap"></NavigationButton>
        <ActionItem icon="res://navigation/menu" android:visibility="collapsed"
            tap="onDrawerButtonTap" ios.position="left">
        </ActionItem>
        <Label class="action-bar-title" text="View Shot"></Label>
    </ActionBar>
    <StackLayout>

		<Label text="Player:   Some Person"></Label>  

		<Label text="Type:      Some Shot   "></Label>

    <VideoPlayer:Video id="nativeVideoPlayer"
            controls="true" loop="true" autoplay="true" height="280"
            src="https://clips.vorwaerts-gmbh.de/big_buck_bunny.mp4" />

    <Label text="Date:    "></Label>
    <Label text="Shot Type:   "></Label>
    <Label text="Rating:   "></Label>

    <GridLayout columns="*,*,*" rows="*,*,*">
        <Button col="0" class="smallbtn" text="Discard" tap="startRecord" />
        <Button col="1" class="smallbtn" text="Save" tap="startRecord" />
        <Button col="2" class="smallbtn" text="Upload" tap="startRecord" />
    </GridLayout>
    </StackLayout>

    
</Page>