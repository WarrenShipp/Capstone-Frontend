<nsDrawer:RadSideDrawer xmlns:nsDrawer="nativescript-ui-sidedrawer"
                        loaded="onLoaded" drawerOpening="onDrawerOpen">
    <nsDrawer:RadSideDrawer.drawerContent>
        <StackLayout backgroundColor="gray">
            <Button class="btn btn-primary sidedrawer-list-item-text" text="Home"
                tap="navigateToHome" />
            <Button class="btn btn-primary sidedrawer-list-item-text" text="My Profile"
                tap="navigateToProfile" visibility="{{ loggedIn ? 'visible' : 'collapsed' }}" />
            <Button class="btn btn-primary sidedrawer-list-item-text" text="Create New Shot"
                tap="navigateToRecord" />
            <Button class="btn btn-primary sidedrawer-list-item-text" text="Search"
                tap="navigateToSearch" visibility="{{ loggedIn ? 'visible' : 'collapsed' }}" />
            <Button class="btn btn-primary sidedrawer-list-item-text" text="View Saved Shots"
                tap="navigateToSaved" />
            <Button class="btn btn-primary sidedrawer-list-item-text" text="Club Creation"
                tap="navigateToClubCreate" />
            <Button class="btn btn-primary sidedrawer-list-item-text" text="My Club"
                tap="navigateToMyClub" />
            <Button class="btn btn-primary sidedrawer-list-item-text" text="Login"
                tap="navigateToLogin" visibility="{{ loggedIn ? 'collapsed' : 'visible' }}" />
            <Button class="btn btn-primary sidedrawer-list-item-text" text="Logout"
                tap="logout" visibility="{{ loggedIn ? 'visible' : 'collapsed' }}" />
            <Button class="btn btn-primary sidedrawer-list-item-text" text="ADMIN TOOLS"
                tap="navigateToAdmin" visibility="{{ debug ? 'visible' : 'collapsed' }}" />
        </StackLayout>
    </nsDrawer:RadSideDrawer.drawerContent>

    <nsDrawer:RadSideDrawer.mainContent>
        <Frame id="root" defaultPage="home-page" />
    </nsDrawer:RadSideDrawer.mainContent>
</nsDrawer:RadSideDrawer>