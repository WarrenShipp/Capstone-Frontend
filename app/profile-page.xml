<Page loaded="pageLoaded" xmlns="http://www.nativescript.org/tns.xsd">
<ActionBar class="action-bar">
        <NavigationButton ios:visibility="collapsed" icon="res://ham" tap="onDrawerButtonTap"></NavigationButton>
        <ActionItem icon="res://navigation/menu" android:visibility="collapsed"
            tap="onDrawerButtonTap" ios.position="left">
        </ActionItem>
        <Label class="action-bar-title" text="Profile"></Label>
    </ActionBar>

		<StackLayout class="smallMargin">
			<Label text="Name: John Doe" />
            <Label text="Type: Player" />
            <Label text="Club: Sunday League" />

            <Button class="btn btn-primary" text="View Player Shots" tap="login"/>
            <Button class="btn btn-primary" text="Request Player to join Club" tap="Requested"/>
            
			
		</StackLayout>
</Page>